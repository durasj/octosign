{
  "name": "octosign",
  "version": "0.1.0",
  "description": "Desktop electronic signature software",
  "main": "index.js",
  "dependencies": {
    "@types/mime-types": "^2.1.0",
    "electron": "^6.0.0",
    "electron-is-dev": "^1.1.0",
    "jest-styled-components": "^7.0.0-beta.1",
    "mime-types": "^2.1.24",
    "ts-jest": "^24.0.2"
  },
  "devDependencies": {
    "@material-ui/core": "^4.3.0",
    "@material-ui/icons": "^4.2.1",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.8.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.7",
    "styled-components": "^5.0.0-beta.8",
    "typeface-roboto": "0.0.75",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "start": "electron ./dist/main.js",
    "start:ui": "parcel src/ui/index.html",
    "build": "npm run build:node && npm run build:ui",
    "build:ui": "parcel build --public-url ./ src/ui/index.html -d dist/ui",
    "build:node": "parcel build --target electron src/main.ts src/preload.ts",
    "test": "npm run test:lint && npm run test:types && npm run test:unit",
    "test:lint": "eslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "test:types": "tsc",
    "test:unit": "jest",
    "dist": "build",
    "clean": "rm -rf dist && rm -rf .cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/durasj/octosign.git"
  },
  "keywords": [
    "signature",
    "electronic",
    "desktop",
    "seal",
    "xades",
    "pades",
    "cades"
  ],
  "author": "Jakub Duras <jakub@duras.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/durasj/octosign/issues"
  },
  "homepage": "https://github.com/durasj/octosign#readme",
  "browserslist": [
    "Electron 6.0"
  ],
  "build": {
    "appId": "me.duras.octosign",
    "productName": "Octosign",
    "copyright": "Copyright © 2019 Jakub Ďuraš",
    "files": [
      "dist${/*}"
    ],
    "directories": {
      "buildResources": "res",
      "output": "artifacts"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": "default"
    },
    "win": {
      "target": "nsis-web"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Science"
    },
    "publish": {
      "provider": "github",
      "owner": "durasj",
      "releaseType": "draft"
    }
  }
}
